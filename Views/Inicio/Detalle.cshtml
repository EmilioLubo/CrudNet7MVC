@model CrudNet7MVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle de Contacto";
}

<h1 class="text-center">Contactos con .NET 7 (.NET Core MVC)</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white fw-bold">Detalle de Usuario</h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item"><span class="fw-bold">Nombre: </span>@Html.DisplayFor(m => m.Nombre)</li>
                    <li class="list-group-item"><span class="fw-bold">Teléfono: </span>@Html.DisplayFor(m => m.Telefono)</li>
                    <li class="list-group-item"><span class="fw-bold">Celular: </span>@Html.DisplayFor(m => m.Celular)</li>
                    <li class="list-group-item"><span class="fw-bold">Email: </span>@Html.DisplayFor(m => m.Email)</li>
                </ul>
                <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>